{
  "hosting": {
    "public": "build-worker",
    "ignore": [
      "firebase.json",
      "firebase-worker.json",
      "**/.*",
      "**/node_modules/**",
      "**/admin/**",
      "**/login/**",
      "**/setup-admin/**"
    ],
    "rewrites": [
      {
        "source": "/worker/**",
        "destination": "/worker/index.html"
      },
      {
        "source": "/",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css|json|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "**/*.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=0, must-revalidate"
          }
        ]
      }
    ]
  }
}
